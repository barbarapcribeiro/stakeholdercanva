    <script>
        // Adicionar efeito visual quando op√ß√£o for selecionada
        document.querySelectorAll('input[type="radio"]').forEach(radio => {
            radio.addEventListener('change', function() {
                // Remove sele√ß√£o anterior do mesmo grupo
                document.querySelectorAll(`input[name="${this.name}"]`).forEach(r => {
                    r.closest('.option').classList.remove('selected');
                });
                // Adiciona sele√ß√£o atual
                this.closest('.option').classList.add('selected');
            });
        });

        function calculateResult() {
            const form = document.getElementById('decisionForm');
            const formData = new FormData(form);
            
            // Verificar se todas as perguntas foram respondidas
            const requiredFields = ['prazo', 'orcamento', 'experiencia', 'complexidade', 'resistencia', 'cultura'];
            const missingFields = requiredFields.filter(field => !formData.get(field));
            
            if (missingFields.length > 0) {
                alert('Por favor, responda todas as perguntas antes de calcular.');
                return;
            }

            // Sistema de pontua√ß√£o
            let pontuacaoInterno = 0;
            let pontuacaoConsultoria = 0;
            let pontuacaoHibrido = 0;

            // An√°lise do prazo
            const prazo = formData.get('prazo');
            if (prazo === 'urgente') {
                pontuacaoConsultoria += 3;
                pontuacaoHibrido += 2;
            } else if (prazo === 'medio') {
                pontuacaoHibrido += 3;
                pontuacaoInterno += 2;
                pontuacaoConsultoria += 2;
            } else {
                pontuacaoInterno += 3;
                pontuacaoHibrido += 1;
            }

            // An√°lise do or√ßamento
            const orcamento = formData.get('orcamento');
            if (orcamento === 'limitado') {
                pontuacaoInterno += 3;
            } else if (orcamento === 'moderado') {
                pontuacaoHibrido += 3;
                pontuacaoInterno += 1;
            } else {
                pontuacaoConsultoria += 3;
                pontuacaoHibrido += 2;
            }

            // An√°lise da experi√™ncia
            const experiencia = formData.get('experiencia');
            if (experiencia === 'inexperiente') {
                pontuacaoConsultoria += 3;
                pontuacaoHibrido += 2;
            } else if (experiencia === 'intermediario') {
                pontuacaoHibrido += 3;
                pontuacaoConsultoria += 1;
                pontuacaoInterno += 1;
            } else {
                pontuacaoInterno += 3;
                pontuacaoHibrido += 1;
            }

            // An√°lise da complexidade
            const complexidade = formData.get('complexidade');
            if (complexidade === 'simples') {
                pontuacaoInterno += 2;
                pontuacaoHibrido += 1;
            } else if (complexidade === 'media') {
                pontuacaoHibrido += 3;
                pontuacaoConsultoria += 2;
                pontuacaoInterno += 1;
            } else {
                pontuacaoConsultoria += 3;
                pontuacaoHibrido += 2;
            }

            // An√°lise da resist√™ncia
            const resistencia = formData.get('resistencia');
            if (resistencia === 'baixa') {
                pontuacaoInterno += 2;
                pontuacaoHibrido += 1;
            } else if (resistencia === 'media') {
                pontuacaoHibrido += 2;
                pontuacaoConsultoria += 1;
                pontuacaoInterno += 1;
            } else {
                pontuacaoConsultoria += 3;
                pontuacaoHibrido += 2;
            }

            // An√°lise da cultura
            const cultura = formData.get('cultura');
            if (cultura === 'profundo') {
                pontuacaoInterno += 3;
                pontuacaoHibrido += 1;
            } else if (cultura === 'moderado') {
                pontuacaoHibrido += 2;
                pontuacaoInterno += 1;
                pontuacaoConsultoria += 1;
            } else {
                pontuacaoConsultoria += 2;
                pontuacaoHibrido += 1;
            }

            // Determinar resultado
            const maxPontuacao = Math.max(pontuacaoInterno, pontuacaoConsultoria, pontuacaoHibrido);
            let resultado, classe, descricao, acoes;

            if (maxPontuacao === pontuacaoInterno) {
                resultado = "üè¢ EQUIPE INTERNA";
                classe = "result-interno";
                descricao = "Sua organiza√ß√£o tem as condi√ß√µes ideais para conduzir a mudan√ßa internamente. Voc√™ tem tempo, conhecimento da cultura e experi√™ncia necess√°ria.";
                acoes = [
                    "Forme uma equipe dedicada de Change Management",
                    "Invista em capacita√ß√£o da equipe interna",
                    "Desenvolva um plano de comunica√ß√£o robusto",
                    "Crie m√©tricas de acompanhamento interno",
                    "Estabele√ßa uma rede de embaixadores da mudan√ßa"
                ];
            } else if (maxPontuacao === pontuacaoConsultoria) {
                resultado = "üöÄ CONSULTORIA EXTERNA";
                classe = "result-consultoria";
                descricao = "Sua situa√ß√£o requer expertise especializada e agilidade. Uma consultoria externa trar√° a experi√™ncia e imparcialidade necess√°rias para o sucesso.";
                acoes = [
                    "Selecione consultoria com experi√™ncia no seu setor",
                    "Defina KPIs claros de sucesso",
                    "Estabele√ßa um comit√™ interno de acompanhamento",
                    "Planeje transfer√™ncia de conhecimento",
                    "Garanta envolvimento da lideran√ßa s√™nior"
                ];
            } else {
                resultado = "ü§ù ABORDAGEM H√çBRIDA";
                classe = "result-hibrido";
                descricao = "A combina√ß√£o perfeita! Use consultoria para design e estrat√©gia, mas mantenha a execu√ß√£o internamente para garantir ader√™ncia cultural e sustentabilidade.";
                acoes = [
                    "Consultoria para diagn√≥stico e estrat√©gia inicial",
                    "Equipe interna para execu√ß√£o e sustenta√ß√£o",
                    "Workshops conjuntos para transfer√™ncia de conhecimento",
                    "Governan√ßa compartilhada do projeto",
                    "Plano de autonomiza√ß√£o gradual da equipe interna"
                ];
            }

            // Exibir resultado
            document.getElementById('resultTitle').textContent = resultado;
            document.getElementById('scoreDisplay').innerHTML = `
                <div class="score-item">
                    <div>Interno</div>
                    <div>${pontuacaoInterno} pts</div>
                </div>
                <div class="score-item">
                    <div>Consultoria</div>
                    <div>${pontuacaoConsultoria} pts</div>
                </div>
                <div class="score-item">
                    <div>H√≠brido</div>
                    <div>${pontuacaoHibrido} pts</div>
                </div>
            `;
            document.getElementById('resultDescription').textContent = descricao;
            document.getElementById('actionItems').innerHTML = `
                <h3>üìã Pr√≥ximos Passos Recomendados:</h3>
                <ul>
                    ${acoes.map(acao => `<li>${acao}</li>`).join('')}
                </ul>
            `;

            const resultContainer = document.getElementById('result');
            resultContainer.className = `result-container ${classe}`;
            resultContainer.style.display = 'block';
            
            // Scroll suave para o resultado
            resultContainer.scrollIntoView({ behavior: 'smooth' });
        }

        function resetForm() {
            document.getElementById('decisionForm').reset();
            document.querySelectorAll('.option').forEach(option => {
                option.classList.remove('selected');
            });
            document.getElementById('result').style.display = 'none';
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
    </script>
